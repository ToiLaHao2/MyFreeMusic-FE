{
  "expo": {
    "name": "MyFreeMusic",
    "slug": "myfreemusic",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "myfreemusic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#00ABA9"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.myfreemusic.app",
      "infoPlist": {
        "NSAppleMusicUsageDescription": "This app needs access to your music library to play local songs.",
        "UIBackgroundModes": [
          "audio"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#00ABA9"
      },
      "package": "com.myfreemusic.app",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.ACCESS_MEDIA_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow MyFreeMusic to access your media.",
          "savePhotosPermission": "Allow MyFreeMusic to save media.",
          "isAccessMediaLocationEnabled": true,
          "legacyExternalStoragePermission": true
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow MyFreeMusic to access your microphone."
        }
      ],
      "expo-document-picker"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}